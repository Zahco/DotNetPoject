@model ClassroomModel
@{
    if (Model.Id == Guid.Empty)
    {
        ViewBag.Title = "Ajout d'une classe";
    }
    else
    {
        ViewBag.Title = "Modification de la classe " + Model.Title;
    }
}

<section class="row">
    <div class="col-md-12">
        @if (Model.Id == Guid.Empty)
        {
            <h1>Ajout d'une nouvelle classe</h1>
        }
        else
        {
            <h1>Modification de la classe @Model.Title</h1>
        }

        @using (Html.BeginForm("AddOrUpdate", "Classroom", FormMethod.Post, new { @id = "form-add-update", role = "form" }))
        {
            HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { aria_describedby = "title-help-text" })
                <div id="title-help-text" class="help-block">@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Establishments)
                @Html.EditorFor(model => model.Establishment_Id)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User)
                @Html.EditorFor(model => model.UserId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Year)
                @Html.EditorFor(model => model.YearId)
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit">Sauvegarder</button>
            </div>
        }
    </div>
</section>
