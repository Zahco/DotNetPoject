@model IEnumerable<TutorModel>

<section class="container-fluid">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.First().FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.First().FullAddress)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Tel)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Mail)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Comment)</th>
                    <th><a href="@Url.Action("AddOrUpdate", "Tutor")">Ajouter</a></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var tutor in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("Get", "Tutor", new { id = tutor.Id })">@tutor.FullName</a></td>
                        <td>@tutor.FullAddress</td>
                        <td>@tutor.Tel</td>
                        <td>@tutor.Mail</td>
                        <td>@tutor.Comment</td>
                        <td><a href="@Url.Action("AddOrUpdate", "Tutor", new { id = tutor.Id })">Mettre à jour</a></td>
                        <td><a href="@Url.Action("Delete", "Tutor", new { id = tutor.Id })">Supprimer</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>