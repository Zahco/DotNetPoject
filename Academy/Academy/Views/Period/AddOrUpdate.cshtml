@model PeriodModel
@{
    if (Model.Id == Guid.Empty)
    {
        ViewBag.Title = "Ajout d'une période";
    }
    else
    {
        ViewBag.Title = "Modification de la période";
    }
}

<section class="row">
    <div class="col-md-12">
        @if (Model.Id == Guid.Empty)
        {
            <h1>Ajout d'une nouvelle période</h1>
        }
        else
        {
            <h1>Modification de la période</h1>
        }

        @using (Html.BeginForm("AddOrUpdate", "Period", FormMethod.Post, new { @id = "form-add-update", role = "form" }))
        {
            HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Begin)
                @Html.EditorFor(model => model.Begin, new { aria_describedby = "name-help-text" })
                <div id="name-help-text" class="help-block">@Html.ValidationMessageFor(model => model.Begin, "", new { @class = "text-danger" })</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.End)
                @Html.EditorFor(model => model.End, new { aria_describedby = "name-help-text" })
                <div id="name-help-text" class="help-block">@Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.YearId)
                @Html.EditorFor(model => model.YearId, new { aria_describedby = "name-help-text" })
                <div id="name-help-text" class="help-block">@Html.ValidationMessageFor(model => model.YearId, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit">Sauvegarder</button>
            </div>
        }
    </div>
</section>
