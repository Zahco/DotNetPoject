@model IEnumerable<AcademyModel>
@{
    var id = Html.RandomID();
    ViewBag.Title = "Liste des académies";
}
<section class="row">
    <h1>Liste des académies</h1>
    <table id="@id" class="table table-striped table-hover" data-filter-url="@Url.Action("GetByFilter", "Academy")">
        <thead>
            <tr>
                <th>
                    <a class="add-link" href="@Url.Action("AddOrUpdate", "Academy")" role="button">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                    <span>@Html.DisplayNameFor(m => m.First().Name)</span>
                </th>
                <td align="right">
                    <div class="input-group">
                        <input class="form-control" type="text" data-filter-id="@id" placeholder="Rechercher" />
                        <span class="input-group-addon glyphicon glyphicon-search"></span>
                    </div>
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var academy in Model)
            {
                <tr id="@academy.Id">
                    <td>
                        <a href="@Url.Action("Get", "Academy", new { id = academy.Id })">@academy.Name</a>
                    </td>

                    <td align="right">
                        <a class="update-link" href="@Url.Action("AddOrUpdate", "Academy", new { id = academy.Id })" role="button">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a class="delete-link" href="@Url.Action("Delete", "Academy", new { id = academy.Id })" role="button">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>