@model IEnumerable<AcademyModel>
@{
    var id = Html.RandomID();
    ViewBag.Title = "Liste des Académies";
}
<section class="row">
    <table id="@id" class="table table-striped table-hover" data-filter-url="@Url.Action("GetByFilter", "Academy")">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th><a href="@Url.Action("AddOrUpdate", "Academy")">Ajouter</a></th>
                <th><input class="col-lg-3 form-control" type="text" data-filter-id="@id" placeholder="Rechercher" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var academy in Model)
            {
                <tr id="@academy.Id">
                    <td><a href="@Url.Action("Get", "Academy", new { id = academy.Id })">@academy.Name</a></td>
                    <td><a href="@Url.Action("AddOrUpdate", "Academy", new { id = academy.Id })">Mettre à jour</a></td>
                    <td><a href="@Url.Action("Delete", "Academy", new { id = academy.Id })">Supprimer</a></td>
                </tr>
            }
        </tbody>
    </table>
</section>