@model ResultModel
@{
    if (Model.Id == Guid.Empty)
    {
        ViewBag.Title = "Ajout d'un tuteur";
    }
    else
    {
        ViewBag.Title = "Modification de la note";
    }
}

<section class="row">
    <div class="col-md-12">
        @if (Model.Id == Guid.Empty)
        {
            <h1>Ajout d'une nouvelle note</h1>
        }
        else
        {
            <h1>Modification de la note</h1>
        }

        @using (Html.BeginForm("AddOrUpdate", "Result", FormMethod.Post, new { @id = "form-add-update", role = "form" }))
        {
            HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Evaluation)
                @Html.EditorFor(model => model.EvaluationId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Pupil)
                @Html.EditorFor(model => model.PupilId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Note)
                @Html.EditorFor(model => model.Note, new { aria_describedby = "note-help-text" })
                <div id="note-help-text" class="help-block">@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit">Sauvegarder</button>
            </div>
        }
    </div>
</section>
