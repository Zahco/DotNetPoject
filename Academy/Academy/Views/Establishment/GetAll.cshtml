@model IEnumerable<EstablishmentModel>
@{
    var id = Html.RandomID();
}
<section class="container-fluid">
    <div class="row">
        <input type="text" data-filter-id="@id" placeholder="Rechercher" />
        <table id="@id" class="table table-striped table-hover" data-filter-url="@Url.Action("GetByFilter", "Establishment")">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Academy)</th>
                    <th>@Html.DisplayNameFor(m => m.First().FullAddress)</th>
                    <th><a href="@Url.Action("AddOrUpdate", "Establishment")">Ajouter</a></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var establishment in Model)
                {
                    <tr id="@establishment.Id">
                        <td><a href="@Url.Action("Get", "Establishment", new { id = establishment.Id })">@establishment.Name</a></td>
                        <td><a href="@Url.Action("Get", "Academy", new { id = establishment.AcademyId })">@establishment.Academy</a></td>
                        <td>@establishment.FullAddress</td>
                        <td><a href="@Url.Action("AddOrUpdate", "Establishment", new { id = establishment.Id })">Mettre à jour</a></td>
                        <td><a href="@Url.Action("Delete", "Establishment", new { id = establishment.Id })">Supprimer</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>