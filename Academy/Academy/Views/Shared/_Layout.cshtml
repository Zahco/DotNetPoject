<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Académie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (GlobalVariables.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Académies", "GetAll", "Academy")</li>
                        <li>@Html.ActionLink("Etablissements", "GetAll", "Establishment")</li>
                        <li>@Html.ActionLink("Classes", "GetAll", "Classroom")</li>
                        <li>@Html.ActionLink("Elèves", "GetAll", "Pupil")</li>
                        <li>@Html.ActionLink("Tuteurs", "GetAll", "Tutor")</li>
                        <li>@Html.ActionLink("Evaluations", "GetAll", "Evaluation")</li>
                        <li>@Html.ActionLink("Périodes", "GetAll", "Period")</li>
                        <li>@Html.ActionLink("Resultats", "GetAll", "Result")</li>
                        <li>@Html.ActionLink("Déconnexion", "LogOff", "Session")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Connexion", "LogOn", "Session")</li>
                    }
                </ul>
            </div>
        </div>    
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Nicolas Gille & Geoffrey Spaur &copy; @DateTime.Now.Year - <a href="https://github.com/Zahco/DotNetPoject" title="Source de l'aplication">Académie Application</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/academyScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
