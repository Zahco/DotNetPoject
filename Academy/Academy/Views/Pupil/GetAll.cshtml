@model IEnumerable<PupilModel>
@{ 
    var id = Html.RandomID();
    ViewBag.Title = "Liste des Etudiants";
}
<section class="row">
    <table id="@id" class="table table-striped table-hover" data-filter-url="@Url.Action("GetByFilter", "Pupil")">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().FullName)</th>
                <th>@Html.DisplayNameFor(m => m.First().Sex)</th>
                <th>@Html.DisplayNameFor(m => m.First().BirthdayDate)</th>
                <th>@Html.DisplayNameFor(m => m.First().Classrooms)</th>
                <th>@Html.DisplayNameFor(m => m.First().Levels)</th>
                <th>@Html.DisplayNameFor(m => m.First().State)</th>
                <th>@Html.DisplayNameFor(m => m.First().Tutor)</th>
                <th><a href="@Url.Action("AddOrUpdate", "Pupil")">Ajouter</a></th>
                <th><input class="col-lg-3 form-control" type="text" data-filter-id="@id" placeholder="Rechercher" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pupil in Model)
            {
                <tr id="@pupil.Id">
                    <td><a href="@Url.Action("Get", "Pupil", new { id = pupil.Id })">@pupil.FullName</a></td>
                    <td>@pupil.Sex</td>
                    <td>@pupil.BirthdayDate</td>
                    <td><a href="@Url.Action("Get", "Classroom", new { id = pupil.ClassroomId })">@pupil.Classrooms</a></td>
                    <td>@pupil.Levels</td>
                    <td>@pupil.State</td>
                    <td>@pupil.Tutor</td>
                    <td><a href="@Url.Action("AddOrUpdate", "Pupil", new { id = pupil.Id })">Mettre à jour</a></td>
                    <td><a href="@Url.Action("Delete", "Pupil", new { id = pupil.Id })">Supprimer</a></td>
                </tr>
            }
        </tbody>
    </table>
</section>