@model EvaluationModel
@{
    if (Model.Id == Guid.Empty)
    {
        ViewBag.Title = "Ajout d'une évaluation";
    }
    else
    {
        ViewBag.Title = "Modification de l'évaluation";
    }
}

<section class="row">
    <div class="col-md-12">
        @if (Model.Id == Guid.Empty)
        {
            <h1>Ajout d'une nouvelle évaluation</h1>
        }
        else
        {
            <h1>Modification de l'évaluation</h1>
        }

        @using (Html.BeginForm("AddOrUpdate", "Evaluation", FormMethod.Post, new { @id = "form-add-update", role = "form" }))
        {
            HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.User)
                @Html.EditorFor(model => model.UserId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Classroom)
                @Html.EditorFor(model => model.ClassroomId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalPoint)
                @Html.EditorFor(model => model.TotalPoint, new { aria_describedby = "totalpoint-help-text" })
                <div id="totalpoint-help-text" class="help-block">@Html.ValidationMessageFor(model => model.TotalPoint, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date)
                @Html.EditorFor(model => model.Date, new { aria_describedby = "date-help-text" })
                <div id="date-help-text" class="help-block">@Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PeriodId)
                @Html.EditorFor(model => model.PeriodId, new { aria_describedby = "date-help-text" })
                <div id="date-help-text" class="help-block">@Html.ValidationMessageFor(model => model.PeriodId, "", new { @class = "text-danger" })</div>
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit">Sauvegarder</button>
            </div>
        }
    </div>
</section>
